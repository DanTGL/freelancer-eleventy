each post in collections.post
    .portfolio-modal.modal.fade(tabindex='-1', aria-labelledby=post.data.modalId, aria-hidden='true', id=post.data.modalId)
        .modal-dialog.modal-xl
            .modal-content
                .modal-header.border-0
                    button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
                .modal-body.text-center.pb-5
                    .container
                        .row.justify-content-center
                            .col-lg-8
                                // Portfolio Modal - Title
                                h2.portfolio-modal-title.text-secondary.text-uppercase.mb-0= post.data.title
                                // Icon Divider
                                .divider-custom
                                    .divider-custom-line
                                    .divider-custom-icon
                                        i.fas.fa-star
                                    .divider-custom-line
                                // Portfolio Modal - Image
                                img.img-fluid.rounded.mb-5(src=post.data.img, alt='...')
                                // Portfolio Modal - Text
                                p.mb-4 !{post.content}
                                button.btn.btn-primary(data-bs-dismiss='modal')
                                    i.fas.fa-xmark.fa-fw
                                    | Close Window